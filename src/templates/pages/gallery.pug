extends ../template

block variables
    - var title = 'Ансамбль'

block content
    .wrapper
        .preloader.preloader--light
            .preloader__spinner
                .preloader__animation.preloader__animation--light
                .preloader__percents.preloader__percents--light 0%
        include ../common/header--within.pug
        .crumbs
            .container
                ul.crumbs__list
                    li.crumbs__item
                        a.crumbs__link(href="index.html") Головна
                    li.crumbs__item
                        a.crumbs__link(href="#") Галерея
                    li.crumbs__item
                        a.crumbs__link(href="#") Фотоальбоми
                    li.crumbs__item
                        a.crumbs__link(href="groups-in.html") Колективи
                    li.crumbs__item
                        .crumbs__link.crumbs__link--active Ансамбль пісні і танцю “Радани”
        section.section.gallery
            .container
                .section__title-wrap
                    h1.section__title Ансамбль пісні і танцю “Радани”
                ul.gallery__list
                    li.gallery__item
                        .gallery__block
                            img.gallery__pic(src="./assets/images/gallery/gal-1.jpg" alt="gallery")
                        .gallery__block
                            img.gallery__pic(src="./assets/images/gallery/gal-2.jpg" alt="gallery")
                    li.gallery__item
                        .gallery__block
                            img.gallery__pic(src="./assets/images/gallery/gal-3.jpg" alt="gallery")
                        .gallery__block
                            img.gallery__pic(src="./assets/images/gallery/gal-4.jpg" alt="gallery")
                    li.gallery__item
                        .gallery__block
                            img.gallery__pic(src="./assets/images/gallery/gal-5.jpg" alt="gallery")
                .section__title-wrap
                    h2.section__title Інші Колективи
                .carousel
                    .carousel__wrap
                        ul.carousel__list#lightSlider
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-one.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle Академічний ансамбль пісні і танцю "Поділля" та ще якийсь текст на одну строку
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-two.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle День Перемоги!
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-three.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle Фестиваль украЇнськоЇ народноЇ рашки сто три...
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-four.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle Концерт “Луганщина - це УкраЇна!”
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-one.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle Lorem ipsum dolor sit amet 
                            li.carousel__item
                                a.carousel__link(href="#")
                                    .carousel__image(style="background-image: url(./assets/images/carousel/carousel-two.jpg)")
                                        .image-wrap.image-wrap--gallery
                                    h3.carousel__subtitle Lorem ipsum dolor sit amet 
                        .carousel__buttons.lSAction
                            button.carousel__control.carousel__control-prev.lSPrev#goToPrevSlide(type="button")
                                svg.carousel__icon.carousel__icon--rotate: use(xlink:href="assets/images/icons/sprite.svg#arrow1")
                            button.carousel__control.carousel__control-next.lSNext#goToNextSlide(type="button")
                                svg.carousel__icon: use(xlink:href="assets/images/icons/sprite.svg#arrow1")
                script.
                    $(document).ready(function() {
                        var slider = $('#lightSlider').lightSlider({
                        item:6,
                        loop:false,
                        slideMove:2,
                        easing: 'cubic-bezier(0.25, 0, 0.25, 1)',
                        speed:600,
                            responsive : [
                            {
                            breakpoint:2400,
                            settings: {
                            item:4,
                            slideMove:1,
                            slideMargin:30,
                            }
                            },
                            {
                            breakpoint:1800,
                            settings: {
                            item:4,
                            slideMove:1,
                            slideMargin:30,
                            }
                            },
                            {
                            breakpoint:1200,
                            settings: {
                            item:4,
                            slideMove:1,
                            slideMargin:15,
                            }
                            },
                            {
                            breakpoint:992,
                            settings: {
                            item:3,
                            slideMove:1,
                            slideMargin:15,
                            }
                            },
                            {
                            breakpoint:768,
                            settings: {
                            item:2,
                            slideMove:1,
                            slideMargin:50,
                            }
                            },
                            {
                            breakpoint:640,
                            settings: {
                            item:1,
                            slideMove:1,
                            slideMargin:20,
                            }
                            },
                            {
                            breakpoint:480,
                            settings: {
                            item:1,
                            slideMove:1
                            }
                            }
                            ]
                            });
                        $('#goToPrevSlide').click(function(){
                            slider.goToPrevSlide();
                        });
                        $('#goToNextSlide').click(function(){
                            slider.goToNextSlide();
                        });
                    });
        include ../common/footer--within.pug